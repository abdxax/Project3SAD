@model IEnumerable<Computer>
@{
    ViewData["Title"] = "Index";
}
<div class="conatiner">
    <div class="row justify-content-center">
        @foreach (Computer item in Model)
        {
            
            var x = @item.ImgPath.Split("\\");

        <div class="col-md-4 col-sm-12">
            <div class="card">
                <div class="card-body">
                 
                    
                    <div class="text-center">
                        <img src="/images/@x[9]" )" width="200" height="200" />
                        <h3>@item.Company - @item.Models</h3>
                        <h5>@item.Description</h5>
                        <p>Price : @item.price</p>
                      
                        @Html.ActionLink("Buy", "GetItem", "Home", new { id=item.Id},new {@class="btn btn-info" })

                      
                    </div>
                  
                </div>
            </div>
        </div>
        }
    </div>
</div>

